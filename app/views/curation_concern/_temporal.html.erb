<%# edit fields for temporal objects -%>
<% times = get_temporal_data(curation_concern)
   times = [""] if times.empty? -%>
<div class="control-group multi_value optional generic_file_temporals managed">
  <%= f.label get_label(:temporals) %>
  <%= f.hint help_icon(:temporals) %>
  <div class="controls">
    <ul class="listing">
      <% times.each do |t| -%>
        <li class="field-wrapper input-append">
          <%= f.text_field :start_time,
            name: "citation[start_time][]",
            class: "input-xlarge input",
            value: t,
            placeholder: "YYYY (- YYYY)" %>
          <%= f.error :start_time %>
        </li>
      <% end -%>
    </ul>
    <%= f.error :temporals, :id => "temporals_error", :class=>"help-inline", :style=>"color:#B94A48" %>
  </div>
</div>

