<% concern = curation_concern.is_a?(Citation) ? curation_concern.generic_files.first : curation_concern -%>
<% if ! concern.nil? && can?(:read, concern) -%>
  <%= link_to raw('<i class="icon-download-alt"></i> Download'), download_path(concern.noid),{class: 'btn', title: "Download #{concern.to_s.inspect}", :target => "_blank"} %>
<% end -%>