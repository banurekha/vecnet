<h4 class="uppercase"><%= has_search_parameters? ? "Filter By" : "Browse By"%></h4>

<ul class="nav nav-list slide-list" id="facets">
 <%= render_facet_partials %>
  <% if has_facet_values?(['hierarchy_facet']) %>
    <li>
      <%= link_to facet_field_labels['hierarchy_facet'], url_for(params.merge(:id => 'hierarchy_facet', :action=>"subject_facet", :path_only=>true)), :class => "ajax_modal_launch" %>
    <li>
  <% end %>
  <% if has_facet_values?(['location_hierarchy_facet']) %>
      <li class="expandable_new grey">
        <a data-target="#collapse_location_hierarchy" data-parent="#" data-toggle="collapse" class="accordion-toggle grey">
          Location Hierarchy <i class="icon-chevron-right grey"></i>
        </a>
      </li>
 <% end %>

</ul>
<div id="collapse_location_hierarchy" class="collapse">
  <ul class="facet-hierarchy">
    <% facet_field = facet_configuration_for_field(params[:id]||'location_hierarchy_facet') %>
    <%= render_hierarchy(facet_field, {:prefix=>'location_hierarchy'}) %>
  </ul>
</div>







