<h4 class="uppercase"><%= has_search_parameters? ? "Filter By" : "Browse By"%></h4>

<ul class="nav nav-list slide-list" id="facets">
 <%= render_facet_partials %>
  <% if has_facet_values?(['hierarchy_facet']) %>
    <li>
      <%= link_to facet_field_labels['hierarchy_facet'], url_for(params.merge(:id => 'hierarchy_facet', :action=>"subject_facet", :path_only=>true)), :id=>'subject_modal', :class => "ajax_modal_launch" %>
    <li>
  <% end %>
  <% if has_facet_values?(['location_hierarchy_facet']) %>
      <li class="expandable_new grey">
        <%= link_to facet_field_labels['location_hierarchy_facet'], url_for(params.merge(:id => 'location_hierarchy_facet', :action=>"location_facet", :path_only=>true)), :id=>'location_modal', :class => "ajax_modal_launch" %>
      </li>
 <% end %>

</ul>







