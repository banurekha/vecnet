<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tag %>

    <meta charset="utf-8" />

    <title><%= h(@page_title || application_name) %></title>
    <!-- application css -->
    <%= stylesheet_link_tag 'application' %>
    <%= yield(:css_head) %>

    <!-- application js -->
    <%= javascript_include_tag 'application' %>

    <!-- controller specific uploader -->
    <%= yield(:js_head) %>

    <script type="text/javascript">
      $(function() {
        <%= yield(:local_js) %>
      });
    </script>

    <%# render :partial => '/ga', :formats => [:html] %>

    <style type="text/css">
      <%= yield(:local_css) %>
    </style>
  </head>

<%# need a better way to determine if we are on the home page and using three col layout %>
<% if params[:controller].eql?("catalog") and !has_search_parameters? %>
  <% column_class = "three" %>
<% elsif not ['generic_files', 'batch', 'advanced', 'users', 'batch_edits'].include?(params[:controller]) %>
  <% column_class = "two" %>
<% else %>
  <% column_class = "one" %>
<% end %>
<% content_for :body do %>
  <div class="navbar navbar-inverse navbar-fixed-top">
    <div class="nav-inner">
      <div class="container">
        <div class="row">
          <div class="span6">
            <% if Rails.env=='production' %>
                <a class="brand" href="http://vecnet-web.crc.nd.edu/">VECNet</a>
            <% else %>
                <a class="brand" href="http://vecnet-qa.crc.nd.edu/">VECNet</a>
            <% end %>
          </div>
          <div class="span6"> <%= render :partial => 'shared/user_util_links', :formats => [:html] %> </div>
        </div>
      </div>
    </div>
  </div>

  <header class="jumbotron subhead row-fluid">
    <hgroup>
      <div class="container">
        <div id="title-bar" class="row">
          <div id="site-title" class="span8">
            <h1>Digital Library</h1>
            <p class="lead">Curate Metadata in the VECNet Digital Library</p>
          </div>
          <div id="site-search" class="span4">
            <%= render 'shared/site_search' if show_site_search?%>
            <%= yield(:search_bar) %>
          </div>
        </div>
      </div>
      </div>
    </hgroup>
  </header>

  <%= render 'shared/flash_message' %>

  <div id="main" role="main" class="container <%= yield(:page_class) if content_for?(:page_class)%>">
    <%= render 'shared/breadcrumbs.html.erb'  if show_breadcrumbs?%>
    <% if content_for?(:page_header) %>
      <div class="row">
        <div class="span12 main-header">
          <%= yield(:page_header) %>
        </div>
      </div>
    <% end %>

    <%= content_for?(:main) ? yield(:main) : yield %>
  </div>

  <%= render '/footer' %>

<% end %>

<%= render :template => 'layouts/boilerplate' %>
</html>
